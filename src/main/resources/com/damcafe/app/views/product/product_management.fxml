                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </GridPane>
                        <TableView id="product_table" fx:id="product_table" styleClass="table-donhang" stylesheets="@../../styles/dashboard_style.css">
