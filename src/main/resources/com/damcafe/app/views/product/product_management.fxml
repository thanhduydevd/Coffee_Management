                              <TableColumn fx:id="colDonGia2" prefWidth="75.0" text="Danh mục" />
                              <TableColumn fx:id="colThanhTien2" prefWidth="75.0" text="Giá bán" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
