                              </Label>
                              <TextField fx:id="product_id" focusTraversable="false" promptText="Nhập mã " GridPane.columnIndex="1" />
                              <ComboBox fx:id="product_category" prefWidth="400.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <TextField fx:id="product_name" promptText="Nhập tên " GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label style="-fx-text-fill: white;" text="Giá bán" textFill="WHITE" GridPane.rowIndex="3">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="product_price" promptText="Nhập giá bán" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <Label style="-fx-text-fill: white;" text="Mô tả" textFill="WHITE" GridPane.rowIndex="4">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextArea fx:id="product_describe" prefHeight="200.0" prefWidth="200.0" promptText="Nhập mô tả" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              <Label style="-fx-text-fill: white;" text="Hình ảnh" textFill="WHITE" GridPane.rowIndex="5">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Button fx:id="product_iamge" mnemonicParsing="false" text="Chọn ảnh" GridPane.columnIndex="1" GridPane.rowIndex="5">
