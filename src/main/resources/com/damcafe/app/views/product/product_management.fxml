                                    <FontAwesomeIcon fill="WHITE" glyphName="PLUS" />
                                 </graphic>
                              </Button>
                              <Button id="button_update" fx:id="btn_update" mnemonicParsing="false" style="-fx-background-color: #8B5A2B; -fx-text-fill: white;" text="Cập nhật">
